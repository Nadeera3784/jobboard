{
  "openapi": "3.0.3",
  "info": {
    "title": "JobBoard",
    "description": "JobBoard API documention",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "apiteam@swagger.io"
    },
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:3000/api/v1"
    }
  ],
  "tags": [
    {
      "name": "locations",
      "description": "Location api endpoint"
    }
  ],
  "paths": {
    "/locations": {
      "get": {
        "tags": [
          "locations"
        ],
        "summary": "Get all locations",
        "description": "Get all locations",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": null
                    },
                    "data": {
                      "type": "array",
                      "items" : {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string",
                            "example": "66066a1123cb331bef59d690"
                          },
                          "name": {
                            "type": "string",
                            "example": "California"
                          },
                          "status": {
                            "type": "string",
                            "example": "InActive"
                          },
                          "created_at": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2024-03-29T07:13:16.528Z"
                          }
                        } 
                      }
                    }
                  } 
                }
              }
            }
          },
          "400": {
            "description": "Error operation",
             "content": {
               "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorApiResponse"
                }
              }
             }
          }
        }
      },
      "post" : {
        "tags": [
          "locations"
        ],
        "summary": "Create a  location",
        "description": "Create a location",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Bexley"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Location has been created successfully"
                    },
                    "data": {
                      "type": "string",
                      "example": null
                    }
                  } 
                }
              }
            }
          },
          "422": {
            "description": "Validtion Errors",
             "content": {
               "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Location has been created successfully"
                    },
                    "data": {
                      "type": "string",
                      "example": null
                    }
                  } 
                }
              }
             }
          },
          "400": {
            "description": "Error operation",
             "content": {
               "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorApiResponse"
                }
              }
             }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorApiResponse": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "example": "error"
          },
          "message": {
            "type": "string",
            "example": "Something went wrong, Please try again later"
          },
          "data": {
            "type": "string",
            "example": null
          }
        }
      }
    },

    "securitySchemes": {
      "petstore_auth": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "https://petstore3.swagger.io/oauth/authorize",
            "scopes": {
              "write:pets": "modify pets in your account",
              "read:pets": "read your pets"
            }
          }
        }
      },
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    }
  }
}